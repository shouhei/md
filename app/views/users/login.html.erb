<h1>Log in</h1>
<%= form_tag '/users/login' do %>
  <div class="field">
    <%= label_tag :name, 'name' %>
    <%= text_field_tag :name, params[:name] %>
  </div>
  <div class="field">
    <%= label_tag :pass, 'password' %>
    <%= password_field_tag :pass , params[:pass]%>
  </div>
  <div class="actions">
  <%= submit_tag "ログイン" %>
  </div>
<% end %>
