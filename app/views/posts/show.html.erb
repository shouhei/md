<div class="aui-page-panel">  <div class="aui-page-panel-inner">    <section class="aui-page-panel-content">      <div class="aui-group aui-group-split">        <div class="aui-item">last update: <%= @post.updated_at.strftime("%Y/%m/%d/ %H:%M:%S") %></div>        <div class="aui-item">          <%= link_to 'Edit', edit_post_path(@post), class:'aui-button'%>          <%= link_to 'Destroy', @post, method: :delete, data: { confirm: '削除しますか？' },class:'aui-button aui-button-primary' %>        </div>      </div>      <div>        <%= markdown(@post.content).html_safe %>      </div>    </section>  </div></div>