<header class="aui-page-header">
  <div class="aui-page-header-inner">
    <div class="aui-page-header-main">
      <h1>Listing Posts</h1>
    </div>
  </div>
</header>
<div class="aui-page-panel">
  <div class="aui-page-panel-inner">
    <section class="aui-page-panel-content">
      <table class="aui">
        <thead>
          <tr>
            <th>Content</th>
            <th>Last Update</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.content.each_line.next %></td>
              <td><%= post.updated_at.strftime("%Y/%m/%d/ %H:%M:%S") %></td>
              <td><%= link_to 'Show', post, class:'aui-button'%></td>
              <td><%= link_to 'Edit', edit_post_path(post), class:'aui-button'%></td>
              <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },class:'aui-button aui-button-primary' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>
  </div>
</div>
